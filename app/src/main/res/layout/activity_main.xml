<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="セ・リーグ"
        app:layout_constraintEnd_toStartOf="@+id/Pacfic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Pacfic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="パ・リーグ"
        app:layout_constraintBottom_toBottomOf="@+id/Central"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Central"
        app:layout_constraintTop_toTopOf="@+id/Central" />

    <ImageView
        android:id="@+id/JapanBaseball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/c9b1ebad6463139f4ebd67a6cb84b6e4" />

</androidx.constraintlayout.widget.ConstraintLayout>